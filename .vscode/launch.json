    "version": "0.2.0",
    "configurations": [
        {
            "name": "aml-run",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/azureml_connector",
            "program": "aml_launcher.py",
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "d4rldataset",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "humanoid_control/offline_rl/d4rl_dataset.py",
            // "program": "humanoid_control/distillation/dataset.py",
            "args": [],
            "justMyCode": false,
            "console": "integratedTerminal",
            "python.envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "expert-rollout",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "humanoid_control/distillation/rollout_experts.py",
            "args": 
            [
                "--input_dirs", "data/CMU_001_01-0-178",
                "--output_path", "data/CMU_001_01-0-178.hdf5",
                "--n_start_rollouts", "1",
                "--n_random_rollouts", "1",
                "--n_workers",  "1",
                "--min_steps", "25"
            ],
            "justMyCode": false,
            "console": "integratedTerminal",
            "python.envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "train-bcq",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "humanoid_control/offline_rl/train_bcq.py",
            "args": 
            [
                "--output_root", "data/offline_rl",
                "--dataset_local_path", "data",
                "--train_dataset_files", "CMU_001_01-0-178.hdf5",
                "--eval_freq", "1"
            ],
            "justMyCode": false,
            "console": "integratedTerminal",
            "python.envFile": "${workspaceFolder}/.env"
        },
    ]
}